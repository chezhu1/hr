
@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-trasitional.dtd">
<html>
<head>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script type="text/javascript" src="../../javascript/jquery-1.7.2.js"></script>
    <script type="text/javascript">
        function deleteMajor(id) {
            $.ajax({
                url: "/HR_Fist/customiz/customizAction!doDeleteMajorKind",
                data: "cmk.mfkId=" + id,
                dataType: "text",
                success: function () {
                    alert("删除成功！");
                    location.reload();
                },
                type: "post"
            });

        }
    </script>
    <style type="text/css">
        .el-table thead tr > th {
            background-color: #FFFFCC;
        }

        .el-table tbody tr > td {
            background-color: #FFFFCC;
        }
    </style>
</head>

<body style="background-color:#FFFFCC">
    <div id="app">
        <el-card class="box-card" style="background-color:#FFFFCC">
            <div slot="header" class="clearfix">
                <el-breadcrumb separator="/">
                    <el-breadcrumb-item :to="{ path: '/' }">首页</el-breadcrumb-item>
                    <el-breadcrumb-item><a href="">客户化设置</a></el-breadcrumb-item>
                    <el-breadcrumb-item>
                        <font color="black">
                            >您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位分类设置
                        </font>
                    </el-breadcrumb-item>
                </el-breadcrumb>
            </div>
            <div>
                <el-button type="primary" size="small" style="float:right" onclick="window.location.href='/KF/ZhiWeiFlInsert'">新增</el-button>
                <el-table :data="table"
                          border
                          style="width: 100%"
                          :header-cell-style="{ background: '#FFFFCC' }"
                          >
                    <el-table-column prop="major_kind_id"
                                     label="职位分类编号"
                                     width="500">
                    </el-table-column>
                    <el-table-column prop="major_kind_name"
                                     label="职位分类名称"
                                     width="500">
                    </el-table-column>
                    <el-table-column label="操作">
                        <template slot-scope="scope">
                            <el-button size="mini"
                                       type="danger"
                                       v-on:click="remove(scope.row.mfk_id)">删除</el-button>
                        </template>
                    </el-table-column>
                </el-table>

            </div>
        </el-card>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#app",
            data: {
                table: [],
            },
            methods: {
                fill: function () {
                    axios.get('/KF/ZhiWeiFl_index1').then(res => {
                        console.log(res);
                        this.table = res.data;
                    }).catch(err => {
                        console.log(err);
                    })
                },
                remove(row) {
                    this.$confirm('是否删除该分类?', '提示', {
                        confirmButtonText: '确定',
                        cancelButtonText: '取消',
                        type: 'warning'
                    }).then(() => {
                        axios.get('/KF/ZhiWeiFlSc', {
                            params: {
                                id: row
                            }
                        }).then(res => {
                            if (res.data > 0) {
                                this.$message({
                                    type: 'success',
                                    message: '删除成功!'
                                });
                                this.fill();
                            }
                        })
                    }).catch(() => {
                        this.$message({
                            type: 'warning',
                            message: '已取消删除'
                        });
                    });
                },
            },
            mounted: function () {
                this.fill();
            }
        })
    </script>
</body>
</html>
